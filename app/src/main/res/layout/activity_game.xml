<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvErrors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="0/3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime" />

    <GridView
        android:id="@+id/gvBoard"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:numColumns="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDifficulty" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="00:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Easy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime" />

    <GridLayout
        android:id="@+id/gridLayoutControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:columnCount="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gvBoard">

        <Button
            android:id="@+id/button1"
            android:background="@drawable/circular_button_nonpressed"
            android:textColor="@color/pantone_classic_blue"
            android:text="1"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_gravity="left|top" />

        <Button
            android:id="@+id/button2"
            android:background="@drawable/circular_button_nonpressed"
            android:textColor="@color/pantone_classic_blue"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="2"
            />

        <Button
            android:id="@+id/button3"
            android:background="@drawable/circular_button_nonpressed"
            android:textColor="@color/pantone_classic_blue"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="3"
            />

        <Button
            android:id="@+id/button4"
            android:background="@drawable/circular_button_nonpressed"
            android:textColor="@color/pantone_classic_blue"
            android:layout_marginBottom="8dp"
            android:text="4"
            />

        <Button
            android:id="@+id/button5"
            android:background="@drawable/circular_button_nonpressed"
            android:textColor="@color/pantone_classic_blue"
            android:layout_marginBottom="8dp"
            android:text="5"
            app:layout_gravity="left|top" />

        <Button
            android:id="@+id/button6"
            android:background="@drawable/circular_button_nonpressed"
            android:textColor="@color/pantone_classic_blue"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="6"
            app:layout_gravity="left|top" />

        <Button
            android:id="@+id/button7"
            android:background="@drawable/circular_button_nonpressed"
            android:textColor="@color/pantone_classic_blue"
            android:layout_marginRight="8dp"
            android:text="7"
            app:layout_gravity="left|top" />

        <Button
            android:id="@+id/button8"
            android:background="@drawable/circular_button_nonpressed"
            android:textColor="@color/pantone_classic_blue"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="8"
            app:layout_gravity="left|top" />

        <Button
            android:id="@+id/button9"
            android:background="@drawable/circular_button_nonpressed"
            android:textColor="@color/pantone_classic_blue"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="9"
            app:layout_gravity="left|top" />

        <Button
            android:id="@+id/buttonCancel"
            android:background="@drawable/circular_button_nonpressed"
            android:textColor="@color/pantone_classic_blue"
            android:layout_marginBottom="8dp"
            android:text="X"
            app:layout_gravity="left|top" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>